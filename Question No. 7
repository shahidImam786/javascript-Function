
//  Question No 07: Write a JavaScript function that accepts a string as a 
//  parameter and counts the number of vowels within the string.

function searchwovel(a) {
  var cnt = 0;
  for (var i = 0; i <= a.length - 1; i++) {
    if (
      a[i] === "a" ||
      a[i] === "e" ||
      a[i] === "i" ||
      a[i] === "o" ||
      a[i] === "u"
    ) {
      cnt = ++cnt;
    }
  }
  console.log(cnt);
}
